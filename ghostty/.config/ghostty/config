font-family = ""
font-family = "Maple Mono NF"
font-size = 11

cursor-style-blink = false
adjust-cursor-thickness = 3

gtk-single-instance = true
gtk-titlebar = false

keybind = ctrl+(=new_split:right
keybind = ctrl+)=new_split:down

keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top

keybind = ctrl+shift+left=resize_split:left,15
keybind = ctrl+shift+down=resize_split:down,15
keybind = ctrl+shift+up=resize_split:up,15
keybind = ctrl+shift+right=resize_split:right,15

keybind = ctrl+shift+o=toggle_split_zoom

keybind = alt+j=next_tab
keybind = alt+k=previous_tab
keybind = alt+g=goto_tab:1
keybind = alt+shift+g=last_tab

keybind = alt+t=new_tab
